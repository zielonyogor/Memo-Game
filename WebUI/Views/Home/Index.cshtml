@namespace NR155910155992.WebUI.Views
@model NR155910155992.MemoGame.Interfaces.IUserProfile

@{
    ViewData["Title"] = "Home Page";
}

<div class="usr-container">
	<h2>Hello, @Model.UserName!</h2>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="btn-container">
        <a class="btn btn-primary" asp-controller="Game" asp-action="Settings">Play Game</a>
        <a class="btn btn-primary" asp-area="" asp-controller="CardItems" asp-action="Index">Cards</a>
        <a class="btn btn-primary" asp-area="" asp-controller="History" asp-action="Index">Show stats</a>
        <a class="btn btn-primary" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
    </div>
</div>

<style>
    .btn-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 10px;
        justify-content: center;
        align-items: center;
    }
</style>