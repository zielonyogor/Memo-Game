@namespace NR155910155992.WebUI.Views
@model NR155910155992.MemoGame.Interfaces.IUserProfile

@{
	ViewData["Title"] = "Home Page";
}

@section Navbar {
	<div class="user-container">
		<span class="user-name">Hello, @Model.UserName!</span>
		<a class="btn user-btn" asp-area="" asp-controller="Users" asp-action="Index">
			<i class="bi bi-gear-fill"></i>
		</a>
	</div>
}

<div class="text-center">
	<div class="btn-container">
		<a class="btn btn-primary" asp-controller="Game" asp-action="Settings">Play Game</a>
		<a class="btn btn-primary" asp-area="" asp-controller="CardItems" asp-action="Index">Cards</a>
		<a class="btn btn-primary" asp-area="" asp-controller="History" asp-action="Index">Show stats</a>
	</div>
</div>