<Window x:Class="NR155910155992.MemoGame.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NR155910155992.MemoGame.UI.ViewModels"
        xmlns:views="clr-namespace:NR155910155992.MemoGame.UI.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NR155910155992.MemoGame.UI"
        mc:Ignorable="d"
        Title="Memory Game" Height="520" Width="840">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:GameViewModel}">
            <Grid>
                <views:GameView Grid.Row="1"/>
            </Grid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:MenuViewModel}">
            <views:MenuView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:GameSessionViewModel}">
            <views:GameSessionView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UsersViewModel}">
            <views:UsersView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CardListViewModel}">
            <views:CardListView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:GameFinishedViewModel}">
            <views:GameFinishedView />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <!-- Main content -->
        <ContentControl
            Content="{Binding CurrentViewModel}" />

        <!-- Modal overlay -->
        <ContentControl
            Content="{Binding CurrentModalViewModel}"
            Background="#80000000"
            Visibility="{Binding IsModalOpen,
                         Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</Window>
