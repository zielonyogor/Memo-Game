<UserControl x:Class="NR155910155992.MemoGame.UI.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NR155910155992.MemoGame.UI.Views"
             xmlns:vm="clr-namespace:NR155910155992.MemoGame.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:GameViewModel}">
    <Grid Background="#F3E5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Back to Main Menu"
                HorizontalAlignment="Left" Margin="5"
                Style="{StaticResource SecondaryButton}"
                Command="{Binding BackToMenu}"/>
        <TextBlock Text="{Binding ElapsedTimeString}"
           FontSize="20"
           FontWeight="Bold"
           HorizontalAlignment="Right"
           Margin="10"/>
        <Grid Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Cards}" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="{Binding Rows}" Columns="{Binding Columns}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:CardView />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.ItemContainerStyle>
                    <Style BasedOn="{StaticResource CardContainer}" TargetType="ContentPresenter"/>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>

            <local:GameFinishedView
                DataContext="{Binding GameFinishedViewModel}"
                Visibility="{Binding DataContext.FinishedOverlayVisibility,
                         RelativeSource={RelativeSource AncestorType=local:GameView}}"/>

        </Grid>
    </Grid>
</UserControl>
