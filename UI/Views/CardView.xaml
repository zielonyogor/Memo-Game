<UserControl x:Class=" NR155910155992.MemoGame.UI.Views.CardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:NR155910155992.MemoGame.UI.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NR155910155992.MemoGame.UI.Views" 
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:CardViewModel}"
             d:DesignHeight="200" d:DesignWidth="200">
    <Viewbox Stretch="Uniform">
        <Grid Width="100" Height="100">
            <Border BorderBrush="DarkMagenta" BorderThickness="2" CornerRadius="4"
                    Background="White" Margin="4">
                <Button Command="{Binding ClickCommand}"
                        IsEnabled="{Binding IsMatched, Converter={StaticResource InverseBoolConverter}}"
                        Background="Transparent" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border CornerRadius="9" ClipToBounds="True">
                                    <Image Source="{Binding CurrentSideImage}" Stretch="UniformToFill"/>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>
