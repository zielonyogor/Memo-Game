<UserControl x:Class=" NR155910155992.MemoGame.UI.Views.CardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:NR155910155992.MemoGame.UI.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NR155910155992.MemoGame.UI.Views" 
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:CardViewModel}"
             d:DesignHeight="200" d:DesignWidth="200">
    <Border BorderBrush="Black" BorderThickness="4" Margin="2" CornerRadius="5" Background="White">
        <Grid>
            <Button Command="{Binding ClickCommand}"
                    IsEnabled="{Binding IsMatched, Converter={StaticResource InverseBoolConverter}}">
                <Image Source="{Binding CurrentSideImage}" Stretch="UniformToFill" Margin="5"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
