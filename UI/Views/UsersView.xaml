<UserControl x:Class="NR155910155992.MemoGame.UI.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:NR155910155992.MemoGame.UI.ViewModels"
             xmlns:local="clr-namespace:NR155910155992.MemoGame.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:UsersViewModel}">
    <Grid Background="#FDFDFD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <HeaderedContentControl Grid.Row="0" 
                        Style="{StaticResource NavBarStyle}"
                        Header="Users">
        </HeaderedContentControl>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1"
              MinWidth="400"
              MaxWidth="800">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,15">
                    <TextBox Width="230"
                         Height="32"
                         VerticalContentAlignment="Center"
                         Text="{Binding NewUserName, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Add"
                        Width="80"
                        Margin="10,0,0,0"
                        Command="{Binding AddUserCommand}" />
                </StackPanel>

                <ListBox Grid.Row="1"
                     ItemsSource="{Binding Users}"
                     HorizontalContentAlignment="Stretch"
                     Background="#F3E5F5">
                    
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:UserItemViewModel}">
                            <local:UserItemView />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>


</UserControl>
