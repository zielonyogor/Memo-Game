<UserControl x:Class="NR155910155992.MemoGame.UI.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:NR155910155992.MemoGame.UI.ViewModels"
             xmlns:local="clr-namespace:NR155910155992.MemoGame.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:UsersViewModel}">
    <Grid Background="#FDFDFD">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Users" 
                    FontSize="36"
                    FontWeight="ExtraBold"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBox Width="230"
                         Height="32"
                         VerticalContentAlignment="Center"
                         Text="{Binding NewUserName, UpdateSourceTrigger=PropertyChanged}" />

                <Button Content="Add"
                        Width="80"
                        Margin="10,0,0,0"
                        Command="{Binding AddUserCommand}" />
            </StackPanel>
            
            <ListBox ItemsSource="{Binding Users}" Height="200" Margin="0,0,0,20">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding UserName}" 
                                Command="{Binding SelectUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                HorizontalContentAlignment="Left" Width="350" Padding="10" Background="Transparent" BorderThickness="0"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
