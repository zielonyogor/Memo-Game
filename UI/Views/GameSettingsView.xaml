<UserControl x:Class="NR155910155992.MemoGame.UI.Views.GameSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NR155910155992.MemoGame.UI.Views"
             xmlns:vm="clr-namespace:NR155910155992.MemoGame.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:GameSettingsViewModel}">
    <Border Padding="30"
         Background="White"
         CornerRadius="10"
         Width="350"
         Height="250"
         BorderBrush="Black"
         BorderThickness="3">
        <StackPanel HorizontalAlignment="Center"
                 VerticalAlignment="Center">

            <TextBlock Text="Setup your game"
                    FontSize="32"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    TextWrapping="Wrap"/>

            <TextBox Text="{Binding Rows, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="10,10,10,10">
            </TextBox>

            <TextBox Text="{Binding Columns, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="10,10,10,10">
            </TextBox>

            <Button Content="Play!"
                 Command="{Binding PlayGame}"
                 Style="{StaticResource PrimaryButton}"/>
        </StackPanel>

    </Border>
</UserControl>
