<UserControl x:Class="NR155910155992.MemoGame.UI.Views.GameSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NR155910155992.MemoGame.UI.Views"
             xmlns:vm="clr-namespace:NR155910155992.MemoGame.UI.ViewModels"
             xmlns:conv="clr-namespace:NR155910155992.MemoGame.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:GameSettingsViewModel}">
    <UserControl.Resources>
        <conv:NullableIntConverter x:Key="NullableIntConverter" />
    </UserControl.Resources>
    <Border Padding="30"
         Background="White"
         CornerRadius="10"
         Width="350"
         Height="300"
         BorderBrush="Black"
         BorderThickness="3">
        <StackPanel HorizontalAlignment="Center"
                 VerticalAlignment="Center">

            <TextBlock Text="Setup your game"
                    FontSize="32"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    TextWrapping="Wrap" Margin="0,0,0,10"/>

            <Grid HorizontalAlignment="Center" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Rows" Foreground="Gray" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Rows, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullableIntConverter}}"
                             Style="{StaticResource NumberInputStyle}"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="✕" 
                           FontSize="16" Foreground="Gray" 
                           VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                           Margin="0,0,0,12"/>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Cols" Foreground="Gray" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Columns, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullableIntConverter}}"
                             Style="{StaticResource NumberInputStyle}"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="{Binding LibraryStatus}"
                       FontSize="13" Foreground="#666"
                       HorizontalAlignment="Center" TextAlignment="Center"
                       Margin="0,0,0,15"/>

            <Button Content="Play!"
                 Command="{Binding PlayGame}"
                 IsEnabled="{Binding IsInputValid}"
                 Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
    </Border>
</UserControl>
