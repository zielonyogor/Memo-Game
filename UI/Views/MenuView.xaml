<UserControl x:Class=" NR155910155992.MemoGame.UI.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:NR155910155992.MemoGame.UI.ViewModels"
             xmlns:local="clr-namespace:NR155910155992.MemoGame.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:MenuViewModel}">
    <Grid Background="#FDFDFD">
        
        <Border
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10"
            Padding="8"
            Background="#EEFFFFFF"
            BorderBrush="#AA000000"
            BorderThickness="1"
            CornerRadius="6"
            IsHitTestVisible="False"
            Panel.ZIndex="100">

            <TextBlock
                Text="{Binding UserText}"
                FontWeight="SemiBold"
                Foreground="Black"/>
        </Border>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Menu" 
                    FontSize="36"
                    FontWeight="ExtraBold"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
            <Button Content="Start game" 
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding StartGameCommand}"/>
            <Button Content="Change User" 
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ShowUserSelection}"/>
            <Button Content="Show stats" 
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ShowSessionHistory}"/>
        </StackPanel>
    </Grid>
</UserControl>
