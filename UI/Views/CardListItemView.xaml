<UserControl x:Class="NR155910155992.MemoGame.UI.Views.CardListItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NR155910155992.MemoGame.UI.Views"
             xmlns:vm="clr-namespace:NR155910155992.MemoGame.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:CardListItemViewModel}">
    
    <Border Width="160" Height="220" Margin="10" 
            Background="White" CornerRadius="8"
            BorderBrush="#EEE" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Gray"/>
        </Border.Effect>

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Source="{Binding ImagePath}" 
                   Stretch="UniformToFill" Margin="0,0,0,5"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <StackPanel Grid.Row="1" 
                        Grid.RowSpan="2" 
                        Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityInvertedConverter}}">

                <TextBlock Text="{Binding Name}" 
                           FontWeight="SemiBold" FontSize="16" TextAlignment="Center" 
                           Margin="0,5" TextTrimming="CharacterEllipsis"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <Button Content="Edit" Command="{Binding StartEditCommand}" 
                            Style="{StaticResource ItemButton}"/>
                    <Button Content="Delete" Command="{Binding DeleteCommand}" 
                            Style="{StaticResource ItemButton}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" 
                        Grid.RowSpan="2"
                        Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                
                <TextBox Text="{Binding EditedName, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,5" Padding="3" HorizontalContentAlignment="Center">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding ConfirmEditCommand}"/>
                        <KeyBinding Key="Esc" Command="{Binding CancelEditCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <Button Content="Save" Command="{Binding ConfirmEditCommand}" 
                            Style="{StaticResource ItemButton}"/>

                    <Button Content="Cancel" Command="{Binding CancelEditCommand}" 
                            Style="{StaticResource ItemButton}"/>
                </StackPanel>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
