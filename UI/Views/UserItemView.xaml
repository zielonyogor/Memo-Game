<UserControl x:Class="NR155910155992.MemoGame.UI.Views.UserItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NR155910155992.MemoGame.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="8"
            Margin="2"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="4"
            HorizontalAlignment="Stretch">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding UserName}"
                       VerticalAlignment="Center"
                       Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityInvertedConverter}}"/>

            <TextBox Text="{Binding EditedName, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding ConfirmEditCommand}" />
                    <KeyBinding Key="Escape" Command="{Binding CancelEditCommand}" />
                </TextBox.InputBindings>
            </TextBox>

            <Button Grid.Column="1"
                    Content="Select"
                    Style="{StaticResource ItemButton}"
                    Command="{Binding SelectCommand}"
                    Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityInvertedConverter}}"/>

            <Grid Grid.Column="2">
                <Button Content="Edit"
                    Style="{StaticResource ItemButton}"
                        Command="{Binding StartEditCommand}"
                        Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityInvertedConverter}}"/>

                <Button Content="Save"
                    Style="{StaticResource ItemButton}"
                        Command="{Binding ConfirmEditCommand}"
                        Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>

            <Grid Grid.Column="3">
                <Button Content="Delete"
                    Style="{StaticResource ItemButton}"
                        Command="{Binding DeleteCommand}"
                        Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityInvertedConverter}}"/>

                <Button Content="Cancel"
                        Style="{StaticResource ItemButton}"
                        Command="{Binding CancelEditCommand}"
                        Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>

        </Grid>
    </Border>
</UserControl>
